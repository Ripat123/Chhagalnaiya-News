<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsPortal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsPortal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/black</item>
    </style>

    <style name="menu_back" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/appbar_day</item>
    </style>

    <style name="top" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/red</item>
    </style>

    <style name="news_back" parent="ThemeOverlay.AppCompat">
        <item name="android:background">#F1F1F1</item>
    </style>

    <style name="back" parent="ThemeOverlay.AppCompat">
        <item name="android:background">#F8F8F8</item>
    </style>

    <style name="news" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.NewsPortal.Fullscreen" parent="Theme.NewsPortal">
        <item name="android:actionBarStyle">@style/Widget.Theme.NewsPortal.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.NewsPortal.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>